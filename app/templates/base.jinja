<html>
    <head>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css'>
    </head>
    <body>

        <div class="container">
            {% block content %}{% endblock %}

            {% with messages = get_flashed_messages(with_categories=true) %}
                {% if messages %}
                    <br>
                    <ul class="flashes" id="flashes">
                        {% for category, message in messages %}
                            {% if category == 'success' %}
                                <div class="alert alert-dismissible alert-success message_flash">
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" onclick="delete_flash()">&times;</button>
                                </div>
                            {% elif category == 'error' %}
                                <div class="alert alert-dismissible alert-danger message_flash">
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" onclick="delete_flash()">&times;</button>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endwith %}

            </div>

        <script>
            function delete_flash() {
                document.getElementById("flashes").remove();
            }
        </script>
    </body>
</html>